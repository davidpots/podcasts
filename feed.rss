<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" 
                   xmlns:atom="http://www.w3.org/2005/Atom"
                   xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">

  <channel>
    <title>DavidPots Podcast Picks</title>
    <description>A feed of recommended episodes, each one hand-picked by @DavidPots.</description>
		<image>
			<title>DavidPots Podcast Picks</title>
			<link>http://davidpots.com/podcasts/episodes</link>
			<url>http://davidpots.com/podcasts/images/feed-background.jpg</url>
		</image>
    <language>en</language>
    <link>http://davidpots.com/podcasts/episodes</link>
    <atom:link href="http://davidpots.com/podcasts/feed.rss" rel="self" type="application/rss+xml"/>

    {% for episode in site.episodes reversed %}

      {% assign podcast_data = site.podcasts | where:"title", episode.podcast %}
      {% assign podcast = podcast_data | first %}

        <item>
          <title>{{ episode.title }}</title>
          <description>
            <![CDATA[
              <p><em>As heard on <a href="{{ podcast.url-web }}">{{ podcast.title }}</a></em>.</p>
              <p><strong>Episode notes from Pots:</strong></p>
              <ul>
                <li>{{ episode.summary }}</li>
              </ul>
              <p><strong>Episode links:</strong></p>
              <ul>
                <li><a href="{{ episode.url-audio }}">Download episode as MP3</a></li>
                <li><a href="{{ episode.url-web }}">Visit episode webpage</a></li>
              </ul>
              <p><strong>For more '{{ podcast.title }}':</strong></p>
              <ul>
                <li><a href="{{ podcast.url-web}}">Visit their website</a></li>
                <li><a href="{{ podcast.url-rss}}">Subscribe via RSS</a></li>
                <li><a href="{{ podcast.url-itunes}}">Subscribe via iTunes</a></li>
              </ul>
            ]]>
          </description>
          <content:encoded>
            <![CDATA[
              <p><em>As heard on <a href="{{ podcast.url-web }}">{{ podcast.title }}</a></em>.</p>
              <p><strong>Episode notes from Pots:</strong></p>
              <ul>
                <li>{{ episode.summary }}</li>
              </ul>
              <p><strong>Episode links:</strong></p>
              <ul>
                <li><a href="{{ episode.url-audio }}">Download episode as MP3</a></li>
                <li><a href="{{ episode.url-web }}">Visit episode webpage</a></li>
              </ul>
              <p><strong>For more '{{ podcast.title }}':</strong></p>
              <ul>
                <li><a href="{{ podcast.url-web}}">Visit their website</a></li>
                <li><a href="{{ podcast.url-rss}}">Subscribe via RSS</a></li>
                <li><a href="{{ podcast.url-itunes}}">Subscribe via iTunes</a></li>
              </ul>
            ]]>
          </content:encoded>
          <guid>{{ episode.url }}</guid>
          <link>{{ episode.url }}</link>
          <enclosure url="{{ episode.url-audio }}" type="audio/mpeg" length="integer"/>
          <pubDate>{{ episode.date | date: '%a, %d %b %Y %T %Z' }}</pubDate>
          <category>Tags: {{ podcast.tags | join: ', '  }}</category>
          <itunes:subtitle>
            As heard on "{{ podcast.title }}" // {{ episode.summary }}
          </itunes:subtitle>
          <itunes:summary>
            As heard on "{{ podcast.title }}" // {{ episode.summary }}
          </itunes:summary>
        </item>

    {% endfor %}

  </channel>

</rss>